<div class="container mt-4">
    <h1>Carrito de Compras</h1>
    
    {{#if cart.products.length}}
        <div class="row">
            {{#each cart.products}}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.title}}</h5>
                            <p class="card-text">{{this.product.description}}</p>
                            <p class="card-text"><strong>Precio:</strong> ${{this.product.price}}</p>
                            <p class="card-text"><strong>Cantidad:</strong> {{this.quantity}}</p>
                            <p class="card-text"><strong>Subtotal:</strong> ${{multiply this.product.price this.quantity}}</p>
                            
                            <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="PUT" class="d-inline">
                                <div class="input-group mb-3" style="max-width: 200px;">
                                    <input type="number" class="form-control" name="quantity" value="{{this.quantity}}" min="1" max="{{this.product.stock}}">
                                    <button type="submit" class="btn btn-outline-primary">Actualizar</button>
                                </div>
                            </form>
                            
                            <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="DELETE" class="d-inline">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <form action="/api/carts/{{cart._id}}" method="DELETE" class="d-inline">
                    <button type="submit" class="btn btn-danger">Vaciar Carrito</button>
                </form>
            </div>
        </div>
    {{else}}
        <div class="alert alert-info">
            El carrito está vacío. <a href="/">Continuar comprando</a>
        </div>
    {{/if}}
</div> 