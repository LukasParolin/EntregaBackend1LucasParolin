<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">{{product.title}}</h1>
                    <p class="card-text">{{product.description}}</p>
                    <div class="product-details">
                        <p><strong>Precio:</strong> ${{product.price}}</p>
                        <p><strong>Categor√≠a:</strong> {{product.category}}</p>
                        <p><strong>Stock:</strong> {{product.stock}}</p>
                        <p><strong>Estado:</strong> {{#if product.status}}Disponible{{else}}No disponible{{/if}}</p>
                    </div>
                    
                    {{#if product.status}}
                    <form action="/api/carts/{{cartId}}/products/{{product._id}}" method="POST" class="mt-4">
                        <div class="form-group">
                            <label for="quantity">Cantidad:</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="{{product.stock}}">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Agregar al Carrito</button>
                    </form>
                    {{/if}}
                    
                    <a href="/" class="btn btn-secondary mt-3">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div> 